@using Etrade.Entities.Models.ViewModels
@model RoleViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Role</h1>
<hr />
<form method="post">
    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Name)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Name,new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ok</button>
    </div>
</form>

