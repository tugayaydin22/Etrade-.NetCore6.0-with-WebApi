@using Etrade.Entities.Models.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<hr />
<hr />
<form method="post">
    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Email)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Email,new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Name)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Name,new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Surname)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Surname,new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Username)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Username,new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Password)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Password,new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ok</button>
    </div>
</form>